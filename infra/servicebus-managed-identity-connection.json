{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "Primary location for all resources"
            }
        },
        "connectionName": {
            "type": "string",
            "defaultValue": "servicebus-v2",
            "metadata": {
                "description": "Connection name"
            }
        },
        "serviceBusNamespaceName": {
            "type": "string",
            "metadata": {
                "description": "Service Bus namespace name"
            }
        }
    },
    "resources": [
        {
            "type": "Microsoft.Web/connections",
            "apiVersion": "2016-06-01",
            "name": "[parameters('connectionName')]",
            "location": "[parameters('location')]",
            "kind": "V1",
            "properties": {
                "alternativeParameterValues": {},
                "api": {
                    "id": "[subscriptionResourceId('Microsoft.Web/locations/managedApis', parameters('location'), 'servicebus')]"
                },
                "authenticatedUser": {},
                "connectionState": "Enabled",
                "customParameterValues": {
                    "serviceBusEndpointUrl": "[concat('sb://', parameters('serviceBusNamespaceName'), '.servicebus.windows.net')]"
                },
                "displayName": "Service Bus V2 Managed Identity",
                "parameterValueSet": {
                    "name": "managedIdentityAuth",
                    "values": {}
                }
            }
        }
    ],
    "outputs": {
        "connectionId": {
            "type": "string",
            "value": "[resourceId('Microsoft.Web/connections', parameters('connectionName'))]"
        },
        "connectionName": {
            "type": "string",
            "value": "[parameters('connectionName')]"
        }
    }
}